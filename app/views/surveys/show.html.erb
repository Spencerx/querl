<h1><%= @survey.name %></h1>
<div class="col-lg-6">
  <h2>Current Survey Items</h2>
  <p><%= link_to "Create New Survey Item", new_survey_item_path(:survey_id => @survey.id) %></p>
  <div class="table-responsive">
    <table class="table table-striped table-hover ">
	  <tr>
	    <th>Name</th>
		<th>Description</th>
		<th>Actions</th>
	  </tr>
	  <% @survey_items.each do |item| %>
	  <tr>
	    <td><%= item.field_name %></td>
		<td><%= item.field_type %></td>
	    <td></td>
	  </tr>
	  <% end %>
    </table>
  </div>
  
</div>

