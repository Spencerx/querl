<%= semantic_form_for @survey_item, :html => { :class => "form-horizontal"} do |f| %>
  <fieldset>
    <legend>New Survey Item</legend>	    
		<%= f.inputs do %>
		  <%= f.input :project_id, :as => :hidden, :input_html => { :value => @project.id} %>
		  <div class="form-group"> 
		    <label for="name" class="col-lg-2 control-label">Field Name</label>
		    <div class="col-lg-10">
		      <%= f.input :field_name, :label => false, :input_html => { :class => "form-control"} %>
		    </div>	
		  </div>
		  <div class="form-group">
		    <label for="description" class="col-lg-2 control-label">Display Text</label>
		    <div class="col-lg-10">
		      <%= f.input :display_text, :as => :ckeditor, :label => false, :input_html => { :class => "form-control"} %>
	        </div>
		  </div>
		  <div class="form-group">
		    <label for="description" class="col-lg-2 control-label">Field Type</label>
		    <div class="col-lg-10">
			  <div class="radio">	
		        <%= f.input :field_type, :as => :radio, :collection => SurveyItem::FIELD_TYPES, :label => false %>
			  </div>	
	        </div>
		  </div>
		  <div class="form-group">
		    <label for="description" class="col-lg-2 control-label">Field Options</label>
		    <div class="col-lg-10">
		      <%= f.input :field_options, :label => false, :input_html => { :class => "form-control"} %>
	        </div>
		  </div>
		  <div class="form-group">
		    <label for="description" class="col-lg-2 control-label">Required Field?</label>
		    <div class="col-lg-10">
		      <%= f.input :required, :as => :boolean, :label => false %>
	        </div>
		  </div>
		<% end %>
		<%= f.actions do %>
		  <%= f.action :submit, :as => :button, :button_html => { :class => "btn btn-primary"} %>
		<% end %>
  </fieldset>
<% end %>