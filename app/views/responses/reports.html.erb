<div class="col-lg-12">
  <h1>Reports for <%= @survey.name %></h1>
</div>

<div class="col-lg-6">
  <h2>Available Target Lists</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover ">
	  <tr>
	    <th>Name</th>
		<th>Actions</th>
	  </tr>
	  <% unless @target_lists.nil? %>
	    <% @target_lists.each do |list| %>
	      <tr>
	        <td><%= list.name %></td>
	        <td>
			  <% unless @csv.nil? %>
			  	<%= link_to "Download CSV", "/uploads/report.csv" %>
			  <% else %>
			    <%= link_to('Export Responses to CSV', export_responses_path(:survey_id => @survey.id, :target_list_id => list.id)) %>	  
			  <% end %>
			</td>
	      </tr>
		<% end %>
	  <% else %>
	    <h3>No target lists for this project.</h3>
	  <% end %>
    </table>
  </div>
</div>

<div class="col-lg-6">
  <% unless @csv.nil? %>
    <h2>Download</h2>
	<h4><%= link_to "Download CSV", "/uploads/report.csv" %></h4>
  <% else %>
    <h2>Generate</h2>
    <h4><%= link_to('Export Responses to CSV', export_responses_path(:survey_id => @survey.id)) %></h4>	  
  <% end %>
</div>  
  
  
  
  
  
  
  
  