<h1><%= @project.name %></h1>
<div class="col-lg-6">
  <h2>Current Users</h2>	
  <div class="table-responsive">
    <table class="table table-striped table-hover ">
	  <tr>
	    <th>Name</th>
		<th>Role</th>
		<th>Actions</th>
	  </tr>
	  <% @current_users.each do |user| %>
	  <tr>
	    <td><%= user.username %></td>
		<td><%= user.get_role(@project) %></td>
	    <td><%= link_to 'Remove from Project', remove_user_projects_path(:project_id => @project.id, :user_id => user.id), :confirm => "Are you sure?" %></td>
	  </tr>
	  <% end %>
    </table>
  </div> 
</div>

<div class="col-lg-6">
  <h2>All Users</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover ">
	  <tr>
	    <th>Name</th>
		<th>Actions</th>
	  </tr>
	  <% @all_users.each do |user| %>
	  <tr>
	    <td><%= user.username %></td>
	    <td><%= link_to 'Add as Owner', add_owner_projects_path(:project_id => @project.id, :user_id => user.id) %> | <%= link_to 'Add as Coder', add_coder_projects_path(:project_id => @project.id, :user_id => user.id) %></td>
	  </tr>
	  <% end %>
    </table>
  </div>
</div> 
 