<h1><%= @project.name %></h1>
<div class="col-lg-6">
  <h2>Current Users</h2>	
  <div class="table-responsive">
    <table class="table table-striped table-hover ">
	  <tr>
	    <th>Name</th>
		<th>Role</th>
		<th>Actions</th>
	  </tr>
	  <% @current_users.each do |user| %>
	  <tr>
	    <td><%= user.username %></td>
		<td><%= user.user_roles.first.name %></td>
	    <td><%= link_to 'Remove from Project', manage_users_projects_path(:id => @project.id) %></td>
	  </tr>
	  <% end %>
    </table>
  </div> 
</div>

<div class="col-lg-6">
  <h2>All Users</h2>
  <div class="table-responsive">
    <table class="table table-striped table-hover ">
	  <tr>
	    <th>Name</th>
		<th>Actions</th>
	  </tr>
	  <% @all_users.each do |user| %>
	  <tr>
	    <td><%= user.username %></td>
	    <td><%= link_to 'Add as Owner', manage_users_projects_path(:id => @project.id) %></td> | <td><%= link_to 'Add as Coder', manage_users_projects_path(:id => @project.id) %></td>
	  </tr>
	  <% end %>
    </table>
  </div>
</div> 
 